<h1>Books</h1>


<h2 class="new_book_heading">NEW book</h2>
<%= form_with model: @book, url: '/books', method: :post, local:true do |f| %>
   <div class="field">
     <%= f.label :title, 'Title' %>
     <%= f.text_field :title, class: 'book_title'  %>
   </div>
   <div class="field">
     <%= f.label :body, 'Body' %>
     <%= f.text_area :body, class: 'book_body' %>
   </div>
   <div class="action">
     <%= f.submit 'Create Book' %>
   </div>
<% end %>



