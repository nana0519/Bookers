<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error-box">
    <h2>
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </h2>
    <ul class= "error-message">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: 'book_title' %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: 'book_body' %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
